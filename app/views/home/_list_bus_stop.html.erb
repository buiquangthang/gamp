<ul class="nav nav-tabs nav-justified nav-custom" id="bus-line-info">
  <li class="active">
    <a data-toggle="tab" href="#list-bus-station-tab">
      <i class="fa fa-bus" aria-hidden="true"></i>
      <%= t "bus_stop" %>
    </a>
  </li>
  <li>
    <a data-toggle="tab" href="#bus-line-info-tab">
      <i class="fa fa-info-circle"></i>
      <%= t "information_bus_route" %> 
    </a>
  </li>
</ul>

<div class="tab-content">
  <div id="list-bus-station-tab" class="tab-pane fade in active">
    <% @bus_stations.each do |bus_station| %>
      <a href="#" class="list-group-item marker-link" data-markerid="<%= bus_station.id %>">
        <h4><%= bus_station.address %></h4>
      </a>
    <% end %>
  </div>
  <div id="bus-line-info-tab" class="tab-pane fade">
    <div class="clear-fix padding-tab">
      <span>
        <b><%= t "route_name" %>: </b>
        <%= @bus_line.name %>
      </span>
      <br>
      <span>
        <b><%= t "bus_route" %>: </b>
        <%= @bus_line.description %>
      </span>
      <br>
      <span>
        <b><%= t "time_activity" %>: </b>
        <%= @bus_line.operating_from %>
      </span>
      <br>
      <span>
        <b><%= t "ticket_fee" %>: </b>
        <%= @bus_line.ticket_fee %>
      </span>
    </div>
  </div>
</div>
