<div id="mySidenav" class="sidenav">
  <ul class="nav nav-tabs nav-justified">
    <li class="active"><a data-toggle="tab" href="#list-route">Home</a></li>
    <li><a data-toggle="tab" href="#search-bus">Menu 1</a></li>
  </ul>

  <div class="tab-content">
    <div id="list-route" class="tab-pane fade in active">
      <div class="search-route">
        <input type="text" class="form-control">
      </div>
      <div class="list-group">
        <% @bus_routes.each do |route| %>
          <%= link_to show_bus_route_path(route.id),
            remote: true, class: "list-group-item" do %>
            <h4 class="list-group-item-heading"><%= route.name %></h4>
            <p class="list-group-item-text">...</p>
          <% end %>
        <% end %>
      </div>
    </div>
    <div id="search-bus" class="tab-pane fade">
      <h3>Menu 1</h3>
      <p>Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
    </div>
  </div>
</div>

