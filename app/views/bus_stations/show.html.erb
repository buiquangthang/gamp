<div class="page-header">
  <%= link_to bus_stations_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_bus_station_path(@bus_station), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show bus_station</h1>
</div>

<dl class="dl-horizontal">
  <dt>Latitude:</dt>
  <dd><%= @bus_station.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @bus_station.longitude %></dd>

  <dt>Name:</dt>
  <dd><%= @bus_station.name %></dd>

  <dt>Address:</dt>
  <dd><%= @bus_station.address %></dd>

  <dt>Title:</dt>
  <dd><%= @bus_station.title %></dd>

</dl>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script>
    handler = Gmaps.build('Google');
    handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
      markers = handler.addMarkers(<%=raw @hash.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
</script>
