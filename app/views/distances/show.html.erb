<div class="page-header">
  <%= link_to distances_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_distance_path(@distance), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show distance</h1>
</div>

<dl class="dl-horizontal">
  <dt>Busstop from:</dt>
  <dd><%= @distance.busstop_from %></dd>

  <dt>Busstop to:</dt>
  <dd><%= @distance.busstop_to %></dd>

  <dt>Distance metter:</dt>
  <dd><%= @distance.distance_metter %></dd>

</dl>
