<div class="page-header">
  <%= link_to new_bus_line_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Bus line
  <% end %>
  <h1>Listing bus_lines</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Operating from</th>
            <th>Operating to</th>
            <th>In charge unit</th>
            <th>Ticket fee</th>
            <th>Description</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @bus_lines) do |bus_line| %>
            <td><%= bus_line.name %></td>
            <td><%= bus_line.operating_from %></td>
            <td><%= bus_line.operating_to %></td>
            <td><%= bus_line.in_charge_unit %></td>
            <td><%= bus_line.ticket_fee %></td>
            <td><%= bus_line.description %></td>
            <td><%= link_to 'Show', bus_line %></td>
        <td><%= link_to 'Edit', edit_bus_line_path(bus_line) %></td>
        <td><%= link_to 'Destroy', bus_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
