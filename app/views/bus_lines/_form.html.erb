<%= form_for(@bus_line, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @bus_line.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@bus_line.errors.count, "error") %> prohibited this bus_line from being saved:</h4>

      <ul>
      <% @bus_line.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :operating_from, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.time_select :operating_from, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :operating_to, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.time_select :operating_to, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :in_charge_unit, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :in_charge_unit, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ticket_fee, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :ticket_fee, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
